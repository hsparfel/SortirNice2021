<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pouillos.sortirnice">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo_app"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo_app"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.pouillos.sortirnice.activities.AccueilActivity"
            android:windowSoftInputMode="stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.pouillos.sortirnice.activities.EnregistrerSerieActivity"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name="com.pouillos.sortirnice.activities.AfficherSaisonActivity"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name="com.pouillos.sortirnice.activities.AfficherEventsActivity"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name="com.pouillos.sortirnice.activities.AfficherEventDetailActivity"
            android:windowSoftInputMode="stateHidden"/>
    </application>

</manifest>